<main>

    {{> welcome}}

    <!--{{> card}}-->

    <div class="container" id="cards-section">
      <div class="row">
          {{> card}}
      </div>
    </div>

    <div class="container" id="cards-section">
        <div class="row">
            <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <h3>All bills</h3>

            </div>
            <div class="col-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <!-- Search form -->
                <input class="form-control search" type="text" placeholder="Search" aria-label="Search">
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="headertop">
                            <!--Modal form 1-->
                            <div class="modal fade " id="modalForm" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form name="signup" method="post" action="/" onsubmit="return disableButton()">
                                        <div class="modal-body">
                                            <div class="ena"><label for="inputGoal">Category</label></br>
                                                <select id="inputCategory" class="form-control">
                                                    <option selected disabled>Select Category</option>
                                                    {{#each categories}}
                                                    <option id="category{{id}}">{{category}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                            <div class="checker">
                                                <label for="Payee">Payee</label><br>
                                                <input type="text" id="Payee" class="form-control" onfocusout="check(this)" placeholder="e.g. Elektro Ljubljana d.d.">
                                            </div>
                                            <div id="alerts"></div>
                                            <div class="ena">
                                                <label for="Amount">Amount</label><br>
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text">€</span>
                                                    </div>
                                                    <input type="number" class="form-control" onfocusout="amount(this)" id="Amount" placeholder="e.g. 15" step="any"> 
                                                </div>    
                                                <div id="amm"></div>
                                            </div>
                                            <div class="ena">
                                                <label for="date">Date due</label><br>
                                                <input type="date" class="form-control" value="2020-11-01">
                                            </div>
                                            <div class="ena">
                                                <label for="once">How often?</label><br>
                                                <input type="radio" id="once" name="rad" value="once">
                                                <label for="once">Once</label><br>
                                                <input type="radio" id="monthly" name="rad" value="monthly">
                                                <label for="monthly">Monthly</label><br>
                                                <input type="radio" id="yearly" name="rad" value="yearly">
                                                <label for="yearly">Yearly</label><br>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="submit" onclick="disableButton()" class="btn btn-primary">Add Bill</button>
                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!--Modal form2-->
                            <!--- Modal Form Edit --->

                            {{#each bill}}
                            <div class="modal fade" id="editForm{{id}}" tabindex="-1" role="dialog" aria-labelledby="modalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">

                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <form name="signup" method="post" action="/" onsubmit="return disableButton2()">
                                            <div class="modal-body">
                                                <div class="ena">
                                                    <label for="Category">Category</label><br>
                                                    <select id="inputCategory" class="form-control">
                                                    {{#each ../categories}}
                                                        <option id="category{{id}}">{{category}}</option>
                                                    {{/each}}
                                                    </select>
                                                </div>
                                                <div class="ena">
                                                    <label for="Payee">Payee</label><br>
                                                    <input type="text" id="Payee2" onfocusout="check2(this,{{id}})" class="form-control" value={{company}}>
                                                    <div id="alarm{{id}}"></div>
                                                </div>
                                                
                                                <div class="ena">
                                                    <label for="Amount">Amount</label><br>
                                                    <div class="input-group mb-3">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text">€</span>
                                                        </div>
                                                        <input type="number" id="Amount2" onfocusout="amount2(this,{{id}})" class="form-control" placeholder="e.g. 150.30" step="any">
                                                    </div>
                                                    <div id="amm{{id}}"></div>
                                                </div>
                                                <div class="ena">
                                                    <label for="date">Date due</label><br>
                                                    <input type="date" class="form-control" value="2020-01-01">
                                                </div>
                                                <div class="ena">
                                                    <b>How often?</b><br>
                                                    <input type="radio" name="radio" id="once" value="once">
                                                    <label for="once">Once</label><br>
                                                    <input type="radio" name="radio" id="monthly" value="monthly">
                                                    <label for="monthly">Monthly</label><br>
                                                    <input type="radio" name="radio" id="yearly" value="yearly">
                                                    <label for="yearly">Yearly</label><br>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger">Delete Bill</button>
                                                <button type="submit" onclick="disableButton2()" class="btn btn-primary">Save Changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                        </thead>
                        </div>
                    <tbody>
                    
                    
                    {{> billsTableElement}}                 

                </table>
            </div>
            <button data-toggle="modal" href="#modalForm" role="button" aria-expanded="false" aria-controls="about" class="btn btn-primary addbill">Add bill
            <i class="fas fa-plus-square"></i>
            </button></br>
        </div>
    </div>
    </div>
</main>